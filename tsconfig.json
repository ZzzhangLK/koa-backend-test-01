{
  "compilerOptions": {
    // --- 模块设置 ---
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,

    // --- 输出设置 ---
    "outDir": "./dist",
    "rootDir": "./src",

    // --- 严格性与质量 ---
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // --- 用于调试的 Source Maps ---
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*.ts"], // 只编译 src 目录下的文件
  "exclude": ["node_modules", "dist"] // 不编译 node_modules 和输出目录
}
